@{
    ViewBag.Title = "new-group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Content/js/newGroup.js")

<div class="row">
    <div class="span6 offset3 sh-folded-corner sh-form-new-group">
