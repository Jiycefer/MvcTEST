                <option>2</option>
            </select>

            <select>
                <option>Направление подготовки</option>
                <option>2</option>
                <option>3</option>
            </select>

            <select>
                <option>Курс</option>
                <option>2</option>
                <option>3</option>
            </select>

            <select>
                <option>Группа</option>
                <option>2</option>
                <option>3</option>
            </select>



            <br>
            <button class="sh-button">Создать</button>
        </form>
    </div>
</div>
